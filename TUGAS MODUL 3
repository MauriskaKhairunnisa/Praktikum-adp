#include <iostream>
using namespace std;

int main() {
    int n;
    cout << "Masukkan jumlah huruf pada piramida: ";
    cin >> n;

    for (int i = 1; i <= n; i++) {
        char huruf = 'A';
    for (int j = 1; j <= n - i; j++) {
            cout << "  ";
        }
    for (int j = 1; j <= i; j++) {
            cout << huruf++<<" ";
        }
    for (int j = 1; j < i; j++) {
            cout << --huruf<<" ";
        }
        cout << endl;
    }
}
