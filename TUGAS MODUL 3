#include <iostream>
using namespace std;

int main() {
    
   cout<<"\n Tugas Modul 3 shift 4 ";
   cout<<"\n Nama : Mauriska Khairunnisa ";
   cout<<"\n NIM : 2310433016 \n";
   
    cout<<"\n Menampilkan pola pyramida menggunakan alphabet \n";
    
    int n;
    cout <<"Masukkan jumlah huruf pada piramida: ";
    cin >> n;

    for (int i = 1; i <= n; i++) {
        char huruf = 'A';
    for (int j = 1; j <= n - i; j++) {
            cout << "  ";
        }
    for (int j = 1; j <= i; j++) {
            cout << huruf++<<" ";
        }
    for (int j = 1; j < i; j++) {
            cout << --huruf<<" ";
        }
        cout << endl;
    }
}
